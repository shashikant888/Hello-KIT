<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorOnPrimary"
    tools:context=".kims.KimsActivity">
    <TextView
        android:id="@+id/welcomeKims"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KASHI INSTITUTE OF MANAGEMENT AND SCIENCE"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#F63100"
        />
    <ImageView
        android:layout_width="123dp"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_kims"
        android:scaleType="fitXY"
        android:padding="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/welcomeKims"
        android:layout_marginTop="150dp"
        android:background="@drawable/kims_activity_bg">
        <TextView
            android:id="@+id/txtKimsDashboardUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard : Assistance Professor"
            android:textColor="@color/purple_500"
            android:layout_centerHorizontal="true"
            android:textSize="13dp"
            android:textStyle="italic"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/txtKimsMyUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My User Id :"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorOnSecondary"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtKimsShowMyUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="150dp"
            android:text="888888888888"
            android:textColor="@color/colorOnSecondary"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/txtKimsMyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Name :"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/colorOnSecondary"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtKimsShowMyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginStart="150dp"
            android:text="ABC XYZ"
            android:textColor="@color/colorOnSecondary"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/txtViewAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Attendance"
            android:textColor="@color/colorOnSecondary"
            android:textSize="11sp"
            android:layout_below="@id/txtKimsMyName"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            />
        <TextView
            android:id="@+id/txtEditAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Attendance"
            android:textColor="@color/colorOnSecondary"
            android:textSize="11sp"
            android:layout_below="@id/txtKimsMyName"
            android:layout_marginTop="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDashboardKims"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="160dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="125dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp">
