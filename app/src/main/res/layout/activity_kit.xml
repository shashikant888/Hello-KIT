<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    tools:context=".kit.KitActivity">

    <TextView
        android:id="@+id/welcomeKit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KASHI INSTITUTE OF TECHNOLOGY"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        />
    <ImageView
        android:layout_width="147dp"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_kit"
        android:scaleType="fitXY"
        android:padding="2dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/welcomeKit"
        android:layout_marginTop="150dp"
        android:background="@drawable/kit_activity_bg">
        <TextView
            android:id="@+id/txtKitDashboardUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard : Assistance Professor"
            android:textColor="@color/purple_500"
            android:layout_centerHorizontal="true"
            android:textSize="13dp"
            android:textStyle="italic"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/txtKitMyUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My User Id :"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorOnSecondary"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtKitShowMyUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="150dp"
            android:text="888888888888"
            android:textColor="@color/colorOnSecondary"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/txtKitMyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Name :"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/colorOnSecondary"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtKitShowMyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginStart="150dp"
            android:text="ABC XYZ"
            android:textColor="@color/colorOnSecondary"
            android:textStyle="italic"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="160dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="125dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dashboard_kit_cardview_bg">

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/kitAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/yellow_btn_bg"
            android:padding="20dp"
            android:text="Attendance"
            android:textColor="@color/colorOnSecondary"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

</RelativeLayout>